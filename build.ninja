rule DoCmd
  command = $CMD
  description = $DESC

build build/.: DoCmd
    CMD = mkdir build

build build/set-msvc-env.ps1: DoCmd build/.
    CMD = node cmds.js createMsvcScript

build clean: DoCmd
    CMD = node cmds.js clean

build bare: DoCmd
    CMD = node cmds.js bare

build all: phony build/set-msvc-env.ps1
